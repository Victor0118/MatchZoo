{
  "net_name": "MatchPyramid",
  "global":{
     "model_type": "PY",
      "weights_file": "examples/tweets/weights/matchpyramid.tweets.weights",
      "save_weights_iters": 10,
      "num_iters": 1000,
      "display_interval": 10,
      "test_weights_iters": 100,
      "optimizer": "sgd",
      "learning_rate": 0.1
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/tweets/corpus_preprocessed.txt",
        "text2_corpus": "./data/tweets/corpus_preprocessed.txt",
        "use_dpool": true,
        "embed_size": 300,
        "embed_path": "./data/tweets/embed_glove_d300_norm",
        "vocab_size": 72725,
        "train_embed": true,
        "target_mode": "ranking",
        "text1_maxlen": 10,
        "text2_maxlen": 68
    },
    "train": {
        "input_type": "PairGenerator", 
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 100,
        "relation_file": "./data/tweets/relation_train.txt"
    },
    "valid": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/tweets/relation_valid.txt"
    },
    "test": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/tweets/relation_test.txt"
    },
    "predict": {
        "input_type": "ListGenerator", 
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "./data/tweets/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "./data/tweets/predict.test.matchpyramid.txt"
    }
  },
  "model": {
    "model_path": "./matchzoo/models/",
    "model_py": "matchpyramid.MatchPyramid",
    "setting": {
        "kernel_count": 64,
        "kernel_size": [3, 3],
        "dpool_size": [3, 10],
        "dropout_rate": 0.05
    }
  },
  "losses": [ 
    {
       "object_name": "rank_hinge_loss" ,
       "object_params": {
            "margin": 1.0
       }
    }
  ],
  "metrics": [ "precision@10", "precision@30", "map" ]
}

