{
  "net_name": "KNRM",
  "global":{
      "model_type": "PY",
      "weights_file": "examples/robust04/weights/knrm.robust04.weights",
      "save_weights_iters": 100,
      "num_iters": 2000,
      "display_interval": 100,
      "test_weights_iters": 200,
      "optimizer": "sgd",
      "learning_rate": 0.1
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/robust04/corpus_preprocessed.txt",
        "text2_corpus": "./data/robust04/corpus_preprocessed.txt",
        "use_dpool": false,
        "embed_size": 300,
        "embed_path": "./data/robust04/embed_glove_d300_norm",
        "vocab_size": 273640,
        "train_embed": true,
        "target_mode": "ranking",
        "text1_maxlen": 6,
        "text2_maxlen": 100
    },
    "train": {
        "input_type": "PairGenerator",
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 10,
        "batch_size": 128,
        "relation_file": "./data/robust04/relation_train.txt"
    },
    "valid": {
        "input_type": "ListGenerator",
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/robust04/relation_valid.txt"
    },
    "test": {
        "input_type": "ListGenerator", 
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/robust04/relation_test.txt"
    },
    "predict": {
        "input_type": "ListGenerator",
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "./data/robust04/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "./data/robust04/predict.test.knrm.txt"
    }
  },
  "model": {
    "model_path": "./matchzoo/models/",
    "model_py": "knrm.KNRM",
    "setting": {
        "kernel_num": 21,
        "sigma": 0.1,
        "exact_sigma": 0.001
    }
  },
  "losses": [ 
    {
       "object_name": "rank_hinge_loss",
       "object_params": { "margin": 1.0 }
    }
  ],
  "metrics": [ "precision@10", "precision@30", "map" ]
}

