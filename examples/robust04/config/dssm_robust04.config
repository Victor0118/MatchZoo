{
  "net_name": "DSSM",
  "global":{
      "model_type": "PY",
      "weights_file": "examples/robust04/weights/dssm.robust04.weights",
      "save_weights_iters": 100,
      "num_iters": 1000,
      "display_interval": 100,
      "test_weights_iters": 200,
      "optimizer": "sgd",
      "learning_rate": 0.1
  },
  "inputs": {
    "share": {
        "text1_corpus": "./data/robust04/corpus_preprocessed.txt",
        "text2_corpus": "./data/robust04/corpus_preprocessed.txt",
        "word_triletter_map_file": "./data/robust04/word_triletter_map.txt",
        "target_mode": "ranking",
        "vocab_size": 273640,
        "embed_size": 300
    },
    "train": {
        "input_type": "Triletter_PairGenerator", 
        "dtype": "dssm",
        "phase": "TRAIN",
        "use_iter": false,
        "query_per_iter": 50,
        "batch_per_iter": 5,
        "batch_size": 128,
        "relation_file": "./data/robust04/relation_train.txt"
    },
    "valid": {
        "input_type": "Triletter_ListGenerator", 
        "dtype": "dssm",
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/robust04/relation_valid.txt"
    },
    "test": {
        "input_type": "Triletter_ListGenerator", 
        "dtype": "dssm",
        "phase": "EVAL",
        "batch_list": 10,
        "relation_file": "./data/robust04/relation_test.txt"
    },
    "predict": {
        "input_type": "Triletter_ListGenerator", 
        "dtype": "dssm",
        "phase": "PREDICT",
        "batch_list": 10,
        "relation_file": "./data/robust04/relation_test.txt"
    }
  },
  "outputs": {
    "predict": {
      "save_format": "TREC",
      "save_path": "./data/robust04/predict.test.dssm.txt"
    }
  },
  "model": {
    "model_path": "./matchzoo/models/",
    "model_py": "dssm.DSSM",
    "setting": {
        "hidden_sizes": [300],
        "dropout_rate": 0.1
    }
  },
  "losses": [ 
    {
       "object_name": "rank_hinge_loss" ,
       "object_params": {
            "margin": 1.0
       }
    }
  ],
  "metrics": [ "precision@10", "precision@30", "precision@100", "map" ]
}

